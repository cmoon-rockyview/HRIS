
@page "/EmployeeList"

@using HRIS.Data
@using HRIS.Data.Repository
@using HRIS.AppSrv.Models
@using AutoMapper 


@inject IUnitOfWork _unit
@inject IMapper Mapper 


<h3> Employees </h3>

@if (employees is null)
{
    <p><em>Loading...</em></p>
}
else
{    <table class="table table-striped">
        <thead>
            <tr>
                <th>Employee Id</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            <Virtualize Items="employees" Context="employee">
                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>
                        <button class="btn btn-success">Edit</button>
                        <button class="btn btn-info">View</button>
                    </td>
                </tr>
            </Virtualize>
        </tbody>
    </table>
}


@code {

    private List<EmployeeDTO> employees;

    protected override async Task OnInitializedAsync()
    {
        var emps = await _unit.IEmployeeRepoIns.FindAsync(s=>!s.EmployeeId.Contains("No EmpId"));

        employees = Mapper.Map<List<EmployeeDTO>>(emps);
    }

}
