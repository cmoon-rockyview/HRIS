
@page "/RV/EmployeeList"
@inherits HRIS.AppSrv.RV.EmployeeListBase

<h3> Employees </h3>

@if (_employees is null)
{
    <p><em>Loading...</em></p>}
else
{    <table class="table table-striped">
        <thead>
            <tr>
                <th>Employee Id</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            <Virtualize Items="_employees" Context="employee">
                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>
                        <button class="btn btn-success">Edit</button>
                        <button class="btn btn-info">View</button>
                    </td>
                </tr>
            </Virtualize>
        </tbody>
    </table>
}

